.box

  .page
    .header
      a#signup(href='#signup' style="color:white;") SIGN-UP
   
    .content
      form.Signup( class="signup-form")
        input#name(type='text' placeholder='Enter Name' name='name' )
        input#email(type='text' placeholder='Enter Email' name='email')
        input#password(type='text' placeholder='Enter Password' name='password')
        input#phone(type='number', placeholder="enter phone number", name='phone')
       
        input(type='submit' value='Sign Up')
    
